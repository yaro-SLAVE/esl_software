pipeline {
    agent any     
    stages {
        stage('Build') {
            steps {
                echo 'Starting build...'
                sh '''
                    cd backend
                    python -m venv myenv
                    source myenv/bin/activate
                    python -m pip install -r requirements.txt
                    python -m pip install pylint
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh '''
                    cd backend
                    python -m pylint --version
                    python -m pylint ./
                '''
                
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: '.',
                    reportFiles: 'pylint_report.txt',
                    reportName: 'Pylint Report'
                ])
            }
        }
        // stage('Deploy') будет добавлен после настройки тестов и отчетов
    }
}