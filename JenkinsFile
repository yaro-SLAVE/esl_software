pipeline {
    agent any     
    stages {
        stage('Build') {
            steps {
                echo 'Starting build...'
                sh 'cd backend && pip install -r requirements.txt && pip install pylint'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'pylint --version'
                sh 'pylint **/*.py --output-format=parseable > pylint_report.txt || true'
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: '.',
                    reportFiles: 'pylint_report.txt',
                    reportName: 'Pylint Report'
                ])
            }
        }
        // stage('Deploy') будет добавлен после настройки тестов и отчетов
    }
}