pipeline {
    agent any     
    stages {
        stage('Build') {
            steps {
                echo 'Starting build...'
                sh '''
                    cd backend
                    python -m venv myenv
                    myenv/bin/python -m pip install -r requirements.txt
                    myenv/bin/python -m pip install pylint
                    myenv/bin/python manage.py migrate
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh '''
                    cd backend
                    myenv/bin/python -m pylint --version
                    myenv/bin/python manage.py test
                '''
            }
        }
        stage('Deploy'){
            steps {
                echo 'Deploy...'
                sh '''
                    docker compose up
                '''
            }
        }
    }
}